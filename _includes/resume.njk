{% extends "layout.njk" %}

{% block content %}
<div class="resume-container">
  <header class="header">
    <!-- Новая строка с фото -->
    <img src="{{ resume.photo }}" alt="Фото" class="avatar">
    
    <h1>{{ resume.name }}</h1>
    <p class="title">{{ resume.title }}</p>
    <div class="contacts">
      {% for key, value in resume.contacts %}
        {% if value %}
          <div class="contact-item">
            <img src="icons/{{ key }}.svg" alt="{{ key }}" class="icon">
            <span>{{ value }}</span>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </header>

  <section class="section">
    <h2>Опыт работы</h2>
    {% for job in resume.experience %}
      <div class="job">
        <h3>{{ job.company }} – {{ job.position }}</h3>
        <p class="period">{{ job.period }}</p>
        <p>{{ job.description }}</p>
      </div>
    {% endfor %}
  </section>

  <section class="section">
    <h2>Образование</h2>
    {% for edu in resume.education %}
      <div class="education-item">
        <h3>{{ edu.institution }}</h3>
        <p>{{ edu.degree }} ({{ edu.year }})</p>
      </div>
    {% endfor %}
  </section>

  <section class="section">
    <h2>Проекты</h2>
    <div class="projects-grid">
      {% for project in resume.projects %}
        <a href="{{ project.link }}" class="project-card" target="_blank">
          <h4>{{ project.name }}</h4>
          <p>{{ project.description }}</p>
        </a>
      {% endfor %}
    </div>
  </section>
</div>
{% endblock %}